<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Description>Tests for WaitForNuGetPackage.</Description>
    <OutputType>Exe</OutputType>
    <RootNamespace>MartinCostello.WaitForNuGetPackage</RootNamespace>
    <TargetFramework>net11.0</TargetFramework>
    <UserSecretsId>MartinCostello.WaitForNuGetPackage</UserSecretsId>
    <UseDefaultCodeAnalysisRuleSet>true</UseDefaultCodeAnalysisRuleSet>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\src\WaitForNuGetPackage\WaitForNuGetPackage.csproj" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="coverlet.msbuild" />
    <PackageReference Include="GitHubActionsTestLogger" NoWarn="RT0003" />
    <PackageReference Include="JunitXml.TestLogger" NoWarn="RT0003" />
    <PackageReference Include="JustEat.HttpClientInterception" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" />
    <PackageReference Include="ReportGenerator" />
    <PackageReference Include="Shouldly" />
    <PackageReference Include="Spectre.Console.Testing" />
    <PackageReference Include="Spectre.Console.Cli.Testing" />
    <PackageReference Include="xunit.runner.visualstudio" />
    <PackageReference Include="xunit.v3.mtp-off" />
  </ItemGroup>
  <ItemGroup>
    <CoverletExclude Include="$([MSBuild]::Escape('[Spectre.Console*]*'))" />
  </ItemGroup>
  <PropertyGroup>
    <CollectCoverage>true</CollectCoverage>
    <Threshold>85,78,90</Threshold>
  </PropertyGroup>
</Project>
